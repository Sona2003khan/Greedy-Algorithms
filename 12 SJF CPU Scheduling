import java.util.Arrays;

public class Greedy_sjf_CPU_scheduling_12 {
    public static int SJF_CPU_Scheduling(int nums[]){
        int n=nums.length;

        int t=0;
        int waiting_t=0;

        Arrays.sort(nums);

        for(int i=0;i<n;i++){
            waiting_t += t;
            t += nums[i];
        }
        int ans=waiting_t/n;
        return ans;
    }

    public static void main(String[] args) {
        int nums[]={4, 1, 3, 7, 2};
        int result=SJF_CPU_Scheduling(nums);
        System.out.println(result);
    }
}

// Time Complexity: O(n log n) due to Arrays.sort()
// Space Complexity: O(1) (ignoring input array)
